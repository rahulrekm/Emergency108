<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:paddingLeft="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text=" SUSPECTS"
            android:id="@+id/textView_people"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="19dp" />
        <Spinner
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_people"
            android:popupBackground="#96f7e4"></Spinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text=" TYPE HINT"
            android:id="@+id/textView_type"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />
        <Spinner
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_type"
            android:dropDownWidth="match_parent"
            android:popupBackground="#96f7e4"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text=" CONDITION "
            android:id="@+id/textView_condition"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp" />
        <Spinner
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_condition"
            android:popupBackground="#96f7e4"
            android:textAlignment="center"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:hint="DESCRIPTION"
            android:inputType="text"
            android:id="@+id/editText_description"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_call"
            android:text="CALL"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_margin="7dp" />
        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_sms"
            android:text="SMS"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_margin="7dp" />


    </LinearLayout>


</LinearLayout>